<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="Daftarkaryawan.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0-beta3/css/all.min.css">
    <title>Absen Masuk</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <i class='bx bx-door-open'><a href="/dataabsen" style="text-decoration: none; text-align: center;">Absen</a></i><br>
        <i class='bx bxs-door-open'><a href="/datapulang"style="text-decoration: none; text-align: center;">Absen Pulang</a></i>
        <h1 id="judul" class="text-primary text-center mb-4">Daftar Absensi Masuk</h1><a class="img-brand" href="/index"><img src="/images/Logo-Mitsubishi-Jaya-removebg-preview.png" alt=""></a>
        <div class="row" id="trouble">
            <% let id_absen = 0; %>
            <% ABSEN.forEach(items => { %>
                <% id_absen += 1; %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="images/<%= items.image %>" class="card-img-top" alt="Profile Photo" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><%= items.tanggal %></h5>
                            <% if (role === "HRD") { %>
                                <div class="d-flex justify-content-between">
                                    <button onclick='deleteItem(`<%= items.id_absen %>`)' class="btn btn-danger btn-sm">Hapus</button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        async function deleteItem(id_absen) {
            if (confirm("Apakah Anda yakin ingin menghapus item ini?")) {
                let result = await fetch(`/api/daftar/${id_absen}`, {
                    method: "DELETE",
                });
                if (result.ok) {
                    alert("Item berhasil dihapus");
                    location.reload(); 
                } else {
                    alert("Gagal menghapus item");
                }
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>
